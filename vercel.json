{
  "version": 2,
  "name": "proofofputt",
  "builds": [
    {
      "src": "apps/web/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "apps/api/api.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "apps/api/api.py"
    },
    {
      "src": "/api/test", 
      "dest": "apps/api/api.py"
    },
    {
      "src": "/api/login",
      "dest": "apps/api/api.py"
    },
    {
      "src": "/api/register", 
      "dest": "apps/api/api.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "apps/api/api.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "apps/api/api.py": {
      "maxDuration": 30
    }
  }
}